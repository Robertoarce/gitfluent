    "version": "0.2.0",
    "configurations": [
    {
        "name": "Flutter: Attach to Device",
        "type": "dart",
        "request": "attach"
    },
        {
            "name": "gitfluent",
            "request": "launch",
            "type": "dart"
        },
        {
            "name": "gitfluent (profile mode)",
            "request": "launch",
            "type": "dart",
            "flutterMode": "profile"
        },
        {
            "name": "gitfluent (release mode)",
            "request": "launch",
            "type": "dart",
            "flutterMode": "release"
        },
        {
            "name": "gitfluent (web with disabled security)",
            "request": "launch",
            "type": "dart",
            "args": [
                "-d",
                "chrome",
                "--web-browser-flag=--disable-web-security",
                "--web-browser-flag=--disable-site-isolation-trials",
                "--web-browser-flag=--user-data-dir=/tmp/chrome_dev_test"
            ]
        }
    ]
}